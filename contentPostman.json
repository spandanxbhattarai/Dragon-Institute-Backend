	"event": [
	  {
		"listen": "test",
		"script": {
		  "exec": [
			"// Set content_id variable after creation",
			"if (pm.response.code === 201) {",
			"    const jsonData = pm.response.json();",
			"    pm.collectionVariables.set('content_id', jsonData.data._id);",
			"    console.log('Set content_id:', jsonData.data._id);",
			"}"
		  ],
		  "type": "text/javascript"
		}
